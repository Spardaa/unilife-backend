# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Database Configuration
DB_TYPE=sqlite
SQLITE_PATH=unilife.db

# PostgreSQL Configuration (optional, for production)
# POSTGRESQL_URL=postgresql+asyncpg://user:password@localhost:5432/unilife

# Supabase Configuration (optional, for future use)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# LLM Configuration (Qwen)
QWEN_API_KEY=your_qwen_api_key
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen3-max
QWEN_FILTER_MODEL=qwen-flash

# JWT Configuration
JWT_SECRET_KEY=dev_secret_123
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days

# WeChat Integration (chatgpt-on-wechat)
WECHAT_WEBHOOK_URL=http://localhost:3001/api/v1/chat
WECHAT_SECRET_KEY=your_webhook_secret

# Logging
LOG_LEVEL=INFO
